# Nova HR Assistant Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# LLM Provider: groq (for Groq), google (for Gemini), openai, anthropic, local, openrouter
NOVA_LLM_PROVIDER=groq

# Model name
NOVA_LLM_MODEL=openai/gpt-oss-120b

# Temperature for LLM responses (0.0 to 1.0)
NOVA_LLM_TEMPERATURE=0.1

# Maximum tokens for LLM responses
NOVA_LLM_MAX_TOKENS=2000

# API Key for your chosen provider (required)
NOVA_LLM_API_KEY=your_api_key_here

# =============================================================================
# Scoring Weights Configuration
# =============================================================================
# Note: All weights must sum to 1.0

# Weight for work experience evaluation
NOVA_WEIGHT_EXPERIENCE=0.3

# Weight for skills assessment
NOVA_WEIGHT_SKILLS=0.25

# Weight for education evaluation
NOVA_WEIGHT_EDUCATION=0.2

# Weight for certifications assessment
NOVA_WEIGHT_CERTIFICATIONS=0.15

# Weight for overall fit assessment
NOVA_WEIGHT_OVERALL_FIT=0.1

# =============================================================================
# Output Format Configuration
# =============================================================================

# Include reasoning in the analysis report (true/false)
NOVA_INCLUDE_REASONING=true

# Include confidence scores in the analysis (true/false)
NOVA_INCLUDE_CONFIDENCE=true

# =============================================================================
# Application Settings
# =============================================================================

# Enable debug mode for detailed logging (true/false)
NOVA_DEBUG_MODE=false

# =============================================================================
# Rate Limiting Configuration
# =============================================================================

# Maximum requests per minute (adjust based on your API limits)
NOVA_MAX_REQUESTS_PER_MINUTE=30

# Delay between requests in seconds (helps prevent rate limiting)
NOVA_REQUEST_DELAY=2

# Maximum retry attempts for failed requests
NOVA_MAX_RETRIES=3

# Base delay for exponential backoff (seconds)
NOVA_RETRY_BASE_DELAY=1

# Maximum delay for exponential backoff (seconds)
NOVA_RETRY_MAX_DELAY=60